}

form {
    margin-left:auto;
    margin-right:auto;
    max-width: 20vw;
    margin-top: 30vh;
    background: #FfFfFf;
    filter: drop-shadow(1px 1px 5px #777);
    padding: 25px 25px 25px 25px;
    border-radius: 5%;
    font-family: Segoe UI;
}
h1 {
    font-size: 20px;
    margin: 0vh 0vh 8vh 0vh;
    color: #555;
    text-shadow: 0px 2px #ccc;
    text-align: center;

}
.underline-small{
	position:relative;
}
h1::after{
  display: inline-block;
  content:'';
  height:2px;
  width:12%;
  background:#555;
  position:absolute;
  left:calc(44%);
  bottom:-5px;
}
input[type="text"], select {
    height: 30px;
    font-family: Segoe UI;
    margin-bottom: 16px;
    padding: 3px 3px 3px 5px;
    width: 100%;
    border:none;
    border-bottom: 1px solid;
    border-color: #999;
    background-color: #FfFfFf;

}

#submit {
    background:#f90000;
    opacity:0.8;
    color: #FFF;
    width: 50%;
    margin-left:5vw;
    padding: 1vw 0vw 1vw 0vw;
    margin-bottom: 16px;
	border: none;
    filter: drop-shadow(1px 1px 1px #aaa);
    border-radius: 50vw;
    cursor: pointer;
}
#submit:hover {
     opacity:1;
}
h6{
	text-align: center;
	font: 11px solid;
	color: #555;
}
h6>a{
	color: #f00;
	text-decoration: none;
}
